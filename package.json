    "through2": "^4.0.2",
    "tree-node-cli": "^1.4.0"
  },
  "devDependencies": {
    "eslint": "^7.10.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2"
  },
  "eslintIgnore": [
    "node_modules"
